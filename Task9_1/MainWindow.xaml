<Window x:Class="Task9_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task9_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" x:Name="Dock" Background="White">
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.ChangeColor" Executed="ChangeColorExecuted"/>
        <CommandBinding Command="Undo" Executed="UndoExecuted" CanExecute="CanExecute"/>

    </Window.CommandBindings>
    
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
            <MenuItem Header="Действия">
                <MenuItem Header="Изменить цвет" Command="local:CustomCommands.ChangeColor"/>
                <MenuItem Header="Отменить" Command="ApplicationCommands.Undo"/>
                </MenuItem>
            </Menu>
        <UniformGrid Rows="2">
            <Button Content="Изменить цвет" Height="30" Width="120" VerticalAlignment="Bottom" Margin="10" Command="local:CustomCommands.ChangeColor"/>
            <Button Content="Отменить" Height="30" Width="120" VerticalAlignment="Top" Margin="10" Command="ApplicationCommands.Undo"/>




        </UniformGrid>
    </DockPanel>
    
    
    
    
</Window>
